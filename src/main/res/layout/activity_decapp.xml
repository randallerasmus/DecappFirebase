<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome to Decapp"
            android:id="@+id/textView13"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snap Face"
            android:id="@+id/btnSnapFace"
            android:onClick="Snap"
            android:layout_above="@+id/btnSuspects"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="3dp"
            android:background="@drawable/bt_background"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suspects"
            android:id="@+id/btnSuspects"
            android:onClick="onSuspectButtonClick"
            android:layout_margin="2dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_background"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wanted List"
            android:id="@+id/btnWanteds"
            android:layout_margin="2dp"
            android:layout_below="@+id/btnDangerZone"
            android:background="@drawable/bt_background"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danger Zone"
            android:id="@+id/btnDangerZone"
            android:layout_margin="2dp"
            android:layout_below="@+id/btnSuspects"
            android:background="@drawable/bt_background"
            android:layout_alignRight="@+id/btnLawUpdate"
            android:layout_alignEnd="@+id/btnLawUpdate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Law Update"
            android:id="@+id/btnLawUpdate"
            android:layout_below="@+id/btnWanteds"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bt_background"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="onLawClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/cancelButtonDecapp"
            android:layout_below="@+id/btnLawUpdate"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bt_background"
            android:onClick="CancelDecappMethod"
            android:layout_margin="2dp" />
    </RelativeLayout>
</LinearLayout>